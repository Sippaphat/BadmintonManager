FROM node:18-alpine

WORKDIR /app/server

# Install curl (for healthcheck) + pnpm
RUN apk add --no-cache curl && npm install -g pnpm

COPY server/package.json server/pnpm-lock.yaml* ./
RUN pnpm install --prod --frozen-lockfile

COPY server/ ./

RUN mkdir -p uploads && chown -R node:node /app/server
USER node

EXPOSE 5000
CMD ["node", "index.js"]
